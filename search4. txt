hammer --csv --no-headers package list \
  --organization "x" \
  --content-view "CCV RHEL" \
  --lifecycle-environment "Nonprod" \
  --search 'name = kernel' \
  --per-page 10000 \
  --fields filename \
| awk -F, '
  function tag(fn){
    if (fn ~ /el7(\.|_)/)   return "el7";
    if (fn ~ /el8(\.|_)/)   return "el8";
    if (fn ~ /el9_4/)       return "el9_4";
    if (fn ~ /el9_6/)       return "el9_6";
    return "";
  }
  { t=tag($1); if(t!="") print t "|" $1 }
' \
| sort -t'|' -k1,1 -k2,2V \
| awk -F'|' '{ latest[$1]=$2 } END { print latest["el7"]; print latest["el8"]; print latest["el9_4"]; print latest["el9_6"]; }'